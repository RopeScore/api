{
  "name": "ropescore-api",
  "version": "1.0.0",
  "description": "API to communicate between RopeScore.app and RopeScore (Core)",
  "main": "dist/app.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "build": "tsc -p tsconfig.production.json",
    "dev": "ts-node-dev --rs --respawn src/index.ts",
    "lint": "eslint . --ignore-path .gitignore",
    "lint:fix": "npm run lint -- --fix",
    "codegen": "graphql-codegen --config codegen.yml",
    "codegen:watch": "npm run codegen -- --watch"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/RopeScore/api.ropescore.app.git"
  },
  "engines": {
    "node": ">=14.0.0"
  },
  "author": "Svante Bengtson <svante@swantzter.se> (https://swantzter.se)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/RopeScore/api.ropescore.app/issues"
  },
  "homepage": "https://github.com/RopeScore/api.ropescore.app#readme",
  "dependencies": {
    "@google-cloud/firestore": "^4.11.1",
    "@sentry/node": "^6.3.6",
    "@sentry/tracing": "^6.3.6",
    "apollo-datasource-firestore": "^2.0.0",
    "apollo-server": "^2.24.0",
    "deepmerge": "^4.2.2",
    "dotenv": "^9.0.2",
    "graphql": "^15.5.0"
  },
  "devDependencies": {
    "@graphql-codegen/add": "^2.0.2",
    "@graphql-codegen/cli": "^1.21.4",
    "@graphql-codegen/introspection": "^1.18.2",
    "@graphql-codegen/typescript-resolvers": "^1.19.1",
    "@typescript-eslint/eslint-plugin": "^4.23.0",
    "apollo-server-plugin-base": "^0.12.0",
    "eslint": "^7.26.0",
    "eslint-config-standard-with-typescript": "^20.0.0",
    "eslint-plugin-import": "^2.23.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^4.3.1",
    "ts-node-dev": "^1.1.6",
    "typescript": "^4.2.4"
  }
}
