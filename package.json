{
  "name": "@ropescore/api",
  "version": "1.0.0",
  "description": "API to communicate between RopeScore.app and RopeScore (Core)",
  "main": "dist/app.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "build": "tsc -p tsconfig.production.json",
    "dev": "ts-node-dev --rs --respawn src/index.ts | pino-pretty",
    "lint": "eslint . --ignore-path .gitignore",
    "lint:fix": "npm run lint -- --fix",
    "typecheck": "tsc --noEmit",
    "codegen": "graphql-codegen --config codegen.yml",
    "codegen:watch": "npm run codegen -- --watch"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/RopeScore/api.ropescore.app.git"
  },
  "engines": {
    "node": ">=14.0.0"
  },
  "author": "Svante Bengtson <svante@swantzter.se> (https://swantzter.se)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/RopeScore/api.ropescore.app/issues"
  },
  "homepage": "https://ropescore.com",
  "dependencies": {
    "@google-cloud/firestore": "^5.0.2",
    "@graphql-tools/schema": "^8.3.1",
    "@sentry/node": "^6.11.0",
    "@sentry/tracing": "^6.11.0",
    "apollo-datasource-firestore": "^5.1.0",
    "apollo-server-caching": "^3.3.0",
    "apollo-server-core": "^3.6.1",
    "apollo-server-express": "^3.6.1",
    "deepmerge": "^4.2.2",
    "dotenv": "^11.0.0",
    "express": "^4.17.2",
    "firebase-admin": "^10.0.1",
    "graphql": "^16.2.0",
    "graphql-firebase-subscriptions": "^1.0.0",
    "graphql-subscriptions": "^2.0.0",
    "graphql-type-json": "^0.3.2",
    "graphql-ws": "^5.5.5",
    "jsonwebtoken": "^8.5.1",
    "pino": "^7.6.3",
    "ws": "^8.4.1"
  },
  "devDependencies": {
    "@graphql-codegen/add": "^3.1.0",
    "@graphql-codegen/cli": "^2.1.1",
    "@graphql-codegen/introspection": "^2.1.0",
    "@graphql-codegen/typescript": "^2.4.2",
    "@graphql-codegen/typescript-resolvers": "^2.1.2",
    "@types/jsonwebtoken": "^8.5.5",
    "@types/pino": "^7.0.5",
    "@typescript-eslint/eslint-plugin": "^4.29.3",
    "apollo-server-plugin-base": "^3.2.0",
    "eslint": "^7.32.0",
    "eslint-config-standard-with-typescript": "^20.0.0",
    "eslint-plugin-import": "^2.24.2",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^4.3.1",
    "pino-pretty": "^7.3.0",
    "ts-node-dev": "^1.1.8",
    "typescript": "^4.4.2"
  }
}
