{
  "name": "ropescore-api",
  "version": "1.0.0",
  "description": "API to communicate between RopeScore.app and RopeScore (Core)",
  "main": "dist/app.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "build": "tsc -p tsconfig.production.json",
    "dev": "ts-node-dev --rs --respawn src/index.ts | pino-pretty",
    "lint": "eslint . --ignore-path .gitignore",
    "lint:fix": "npm run lint -- --fix",
    "typecheck": "tsc --noEmit",
    "codegen": "graphql-codegen --config codegen.yml",
    "codegen:watch": "npm run codegen -- --watch"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/RopeScore/api.ropescore.app.git"
  },
  "engines": {
    "node": ">=14.0.0"
  },
  "author": "Svante Bengtson <svante@swantzter.se> (https://swantzter.se)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/RopeScore/api.ropescore.app/issues"
  },
  "homepage": "https://ropescore.com",
  "dependencies": {
    "@google-cloud/firestore": "^4.12.2",
    "@sentry/node": "^6.5.1",
    "@sentry/tracing": "^6.5.1",
    "apollo-datasource-firestore": "^2.2.0",
    "apollo-server": "^2.25.1",
    "deepmerge": "^4.2.2",
    "dotenv": "^10.0.0",
    "graphql": "^15.5.0",
    "pino": "^6.11.3"
  },
  "devDependencies": {
    "@graphql-codegen/add": "^2.0.2",
    "@graphql-codegen/cli": "^1.21.5",
    "@graphql-codegen/introspection": "^1.18.2",
    "@graphql-codegen/typescript-resolvers": "^1.19.2",
    "@types/pino": "^6.3.8",
    "@typescript-eslint/eslint-plugin": "^4.26.1",
    "apollo-server-plugin-base": "^0.13.0",
    "eslint": "^7.28.0",
    "eslint-config-standard-with-typescript": "^20.0.0",
    "eslint-plugin-import": "^2.23.4",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^4.3.1",
    "pino-pretty": "^5.0.2",
    "ts-node-dev": "^1.1.6",
    "typescript": "^4.2.4"
  }
}
